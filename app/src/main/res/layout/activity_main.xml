<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="411dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/wallpaper" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="130dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Apptitle">

        <Button
            android:id="@+id/blackButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif-black"
            android:text="@string/blackButton"
            android:textColor="@color/black"
            app:strokeColor="#B2B0B0"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/GreenButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#3A7424"
            android:fontFamily="sans-serif-black"
            android:text="@string/GreenButton"
            app:strokeColor="#B2B0B0"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/purpleButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/purpleButton"
            app:strokeColor="#B2B0B0"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/redButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#E82323"
            android:fontFamily="sans-serif-black"
            android:text="@string/redButton"
            app:strokeColor="#B2B0B0"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/yellowButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#FFEB3B"
            android:fontFamily="sans-serif-black"
            android:text="@string/yellowButton"
            app:strokeColor="#B2B0B0"
            app:strokeWidth="1dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/Apptitle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="250dp"
        android:fontFamily="sans-serif-black"
        android:lineSpacingExtra="8sp"
        android:text="@string/teacherApp"
        android:textAlignment="textEnd"
        android:textColor="#BFF44336"
        android:textSize="48sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>